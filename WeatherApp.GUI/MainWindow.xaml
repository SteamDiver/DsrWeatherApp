<Window x:Class="WeatherApp.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeatherApp.GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TabControl Margin="10,39,9.6,10">
            <TabItem Header="Данные">
                <Grid Background="#FFE5E5E5" >
                    <DataGrid Margin="0,0,-0.2,0.2"/>
                </Grid>
            </TabItem>
            <TabItem Header="Статистика">
                <Grid Background="#FFE5E5E5" />
            </TabItem>
        </TabControl>
        <Button HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="128" Height="24">
            <StackPanel Orientation="Horizontal" >
                <Image Source="Resources/Icons/Refresh.png" Height="18" Width="18" VerticalAlignment="Center" />
                <TextBlock Margin="8,0,0,0">Обновить</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>