<UserControl x:Class="WeatherApp.GUI.ChartControls.BarChartControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WeatherApp.GUI.ChartControls"
             xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="BarChart">
    <Grid>
        <wpf:CartesianChart Series="{Binding Path=BarSeriesCollection, ElementName=BarChart}" LegendLocation="Right" DataTooltip="{x:Null}">
            <wpf:CartesianChart.AxisX>
                <wpf:Axis Labels="{Binding Path=BarLabels, ElementName=BarChart}" />
            </wpf:CartesianChart.AxisX>
            <wpf:CartesianChart.AxisY>
                <wpf:Axis Title="Count" LabelFormatter="{Binding Formatter, ElementName=BarChart}" />
            </wpf:CartesianChart.AxisY>
        </wpf:CartesianChart>
    </Grid>
</UserControl>